{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "lib": ["dom", "es2015"],
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",

    /* 詳細オプション */
    "locale": "ja",
    "forceConsistentCasingInFileNames": true,

    /* Strict 型チェック オプション */
    "strict": true,

    /* 追加のチェック */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    /* モジュール解決のオプション */
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
